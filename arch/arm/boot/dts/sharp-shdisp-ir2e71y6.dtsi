&soc {
	/*---------------------*/
	/* backlight IC        */
	/*---------------------*/
	sharp,shdisp_ir2e71y6 {
		compatible = "sharp,shdisp_bdic";
		status = "disable";
		interrupts = <9 0>;
		interrupt-parent = <&msmgpio>;
	};

	i2c@f9923000 {
		bdic_i2c@54 {
			compatible = "sharp,bdic_i2c";
			status = "ok";
			reg = <0x54>;
		};

		bdic_i2c@39 {
			compatible = "sharp,sensor_i2c";
			status = "ok";
			reg = <0x39>;
		};
	};
};
